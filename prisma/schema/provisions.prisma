model ClothingProvision {
  id String @id @default(cuid())

  day DateTime
  packed Boolean @default(false)

  containerOrder String? @map("container_order")

  tripId String @map("trip_id")
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  clothingId String   @map("clothing_id")
  clothing   Clothing @relation(fields: [clothingId], references: [id], onDelete: Cascade)

  containerProvisionId String?                    @map("container_provision_id")
  containerProvision   ContainerProvision? @relation(fields: [containerProvisionId], references: [id], onDelete: Cascade)


  @@map("clothing_provisions")
}

model EssentialProvision {
  id String @id @default(cuid())

  packed Boolean @default(false)

  order String
  containerOrder String? @map("container_order")

  tripId String @map("trip_id")
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  essentialId String    @map("essential_id")
  essential   Essential @relation(fields: [essentialId], references: [id], onDelete: Cascade)

  containerProvisionId String?                    @map("container_provision_id")
  containerProvision   ContainerProvision? @relation(fields: [containerProvisionId], references: [id], onDelete: Cascade)

  @@map("essential_provisions")
}

model ContainerProvision {
  id String @id @default(cuid())

  tripId String @map("trip_id")
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  containerId String           @map("container_id")
  container   Container @relation(fields: [containerId], references: [id], onDelete: Cascade)

  clothingProvisions  ClothingProvision[]
  essentialProvisions EssentialProvision[]

  luggageProvisionId String?           @map("luggage_provision_id")
  luggageProvision   LuggageProvision? @relation(fields: [luggageProvisionId], references: [id], onDelete: Cascade)

  packed Boolean @default(false)

  @@map("container_provisions")
}

model LuggageProvision {
  id String @id @default(cuid())

  tripId String @map("trip_id")
  trip   Trip   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  luggageId String  @map("luggage_id")
  luggage   Luggage @relation(fields: [luggageId], references: [id], onDelete: Cascade)

  containerProvisions ContainerProvision[]

  @@map("luggage_provisions")
}
